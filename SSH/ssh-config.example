# SSH Config File Example
# Place this file at ~/.ssh/config
# Set permissions: chmod 600 ~/.ssh/config

# ============================================
# GitHub Configuration
# ============================================
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_github
    IdentitiesOnly yes
    AddKeysToAgent yes
    UseKeychain yes

Host github-work
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_work
    IdentitiesOnly yes

# ============================================
# GitLab Configuration
# ============================================
Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_ed25519_gitlab
    IdentitiesOnly yes

# ============================================
# Bitbucket Configuration
# ============================================
Host bitbucket.org
    HostName bitbucket.org
    User git
    IdentityFile ~/.ssh/id_ed25519_bitbucket
    IdentitiesOnly yes

# ============================================
# Personal Server
# ============================================
Host personal
    HostName personal.example.com
    User admin
    Port 22
    IdentityFile ~/.ssh/id_ed25519
    ServerAliveInterval 60
    ServerAliveCountMax 3
    Compression yes
    ForwardAgent yes

# ============================================
# Work Server
# ============================================
Host work
    HostName work.example.com
    User admin
    Port 2222
    IdentityFile ~/.ssh/id_ed25519_work
    ServerAliveInterval 60
    ServerAliveCountMax 3
    LocalForward 8080 localhost:80
    LocalForward 5432 localhost:5432

# ============================================
# Development Server
# ============================================
Host dev
    HostName dev.example.com
    User developer
    IdentityFile ~/.ssh/id_ed25519_dev
    ServerAliveInterval 30
    RemoteForward 3000 localhost:3000

# ============================================
# Production Server
# ============================================
Host prod
    HostName prod.example.com
    User deploy
    IdentityFile ~/.ssh/id_ed25519_prod
    ServerAliveInterval 60
    StrictHostKeyChecking yes
    UserKnownHostsFile ~/.ssh/known_hosts_prod

# ============================================
# Jump Host (Bastion) Configuration
# ============================================
Host bastion
    HostName bastion.example.com
    User admin
    IdentityFile ~/.ssh/id_ed25519_bastion
    ServerAliveInterval 60

# Internal server accessed through bastion
Host internal-server
    HostName 10.0.0.5
    User admin
    ProxyJump bastion
    IdentityFile ~/.ssh/id_ed25519_internal
    ServerAliveInterval 60

# Another internal server
Host internal-db
    HostName 10.0.0.10
    User admin
    ProxyJump bastion
    IdentityFile ~/.ssh/id_ed25519_internal
    LocalForward 5432 localhost:5432

# ============================================
# Docker Host
# ============================================
Host docker-host
    HostName docker.example.com
    User docker
    IdentityFile ~/.ssh/id_ed25519_docker
    LocalForward 2376 localhost:2376

# ============================================
# AWS EC2 Instance
# ============================================
Host aws-ec2
    HostName ec2-xx-xx-xx-xx.compute-1.amazonaws.com
    User ec2-user
    IdentityFile ~/.ssh/aws-key.pem
    ServerAliveInterval 60

# ============================================
# Global Settings (applied to all hosts)
# ============================================
Host *
    AddKeysToAgent yes
    UseKeychain yes
    IdentityFile ~/.ssh/id_ed25519
    ServerAliveInterval 60
    ServerAliveCountMax 3
    Compression yes
    ForwardAgent yes
    StrictHostKeyChecking ask
    UserKnownHostsFile ~/.ssh/known_hosts

# ============================================
# Notes:
# ============================================
# 1. Set proper permissions:
#    chmod 700 ~/.ssh
#    chmod 600 ~/.ssh/config
#
# 2. Test connection:
#    ssh -T github.com
#    ssh personal
#
# 3. Port forwarding examples:
#    LocalForward: Forward local port to remote
#    RemoteForward: Forward remote port to local
#
# 4. ProxyJump: Use jump host (bastion) to access internal servers
#
# 5. ServerAliveInterval: Send keep-alive every N seconds
#
# 6. Compression: Enable compression for slow connections
#
# 7. ForwardAgent: Forward SSH agent for key forwarding

